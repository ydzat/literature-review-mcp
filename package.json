{
    "name": "@langgpt/arxiv-mcp-server",
    "version": "1.3.0",
    "description": "面向研究生论文级别文献综述的学术论文管理与分析工具，支持多源学术搜索、智能质量评估、Notion 知识库集成",
    "main": "build/index.js",
    "bin": {
        "arxiv-mcp-server": "build/index.js"
    },
    "type": "module",
    "scripts": {
        "build": "tsc && chmod +x build/index.js && cp src/database/schema.sql build/database/",
        "start": "node build/index.js",
        "dev": "tsx src/index.ts",
        "prepublishOnly": "npm run build"
    },
    "files": [
        "build/**/*",
        "README.md"
    ],
    "keywords": [
        "mcp",
        "arxiv",
        "paper",
        "ai",
        "academic",
        "research",
        "literature-review",
        "dblp",
        "openreview",
        "papers-with-code",
        "notion",
        "quality-assessment",
        "citation-analysis",
        "translation",
        "chinese"
    ],
    "author": {
        "name": "yzfly",
        "email": "yz.liu.me@gmail.com",
        "url": "https://github.com/yzfly"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/yzfly/arxiv-mcp-server.git"
    },
    "bugs": {
        "url": "https://github.com/yzfly/arxiv-mcp-server/issues"
    },
    "homepage": "https://github.com/yzfly/arxiv-mcp-server#readme",
    "dependencies": {
        "@agentic/arxiv": "^7.6.7",
        "@modelcontextprotocol/sdk": "^0.6.0",
        "@types/better-sqlite3": "^7.6.13",
        "axios": "^1.6.0",
        "better-sqlite3": "^12.4.1",
        "canvas": "^3.2.0",
        "pdfjs-dist": "^5.4.296",
        "pdfreader": "^3.0.7"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/pdf-parse": "^1.1.5",
        "tsx": "^4.0.0",
        "typescript": "^5.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    }
}
