{
  "mcpServers": {
    "literature-review-mcp-npx": {
      "comment": "使用 NPX 方式运行（推荐，自动下载最新版本）",
      "command": "npx",
      "args": ["-y", "@ydzat/literature-review-mcp@latest"],
      "env": {
        "LLM_PROVIDER": "siliconflow",
        "LLM_API_KEY": "your_siliconflow_api_key_here"
      }
    },
    "literature-review-mcp-local-siliconflow": {
      "comment": "本地开发方式（需要先运行 npm run build 编译）",
      "command": "node",
      "args": ["/absolute/path/to/literature-review-mcp/build/index.js"],
      "env": {
        "LLM_PROVIDER": "siliconflow",
        "LLM_API_KEY": "your_siliconflow_api_key_here"
      }
    },
    "literature-review-mcp-local-deepseek": {
      "comment": "本地开发 + Deepseek（需要先运行 npm run build 编译）",
      "command": "node",
      "args": ["/absolute/path/to/literature-review-mcp/build/index.js"],
      "env": {
        "LLM_PROVIDER": "custom",
        "LLM_BASE_URL": "https://api.deepseek.com/v1",
        "LLM_API_KEY": "your_deepseek_api_key_here",
        "LLM_MODEL": "deepseek-chat"
      }
    },
    "literature-review-mcp-local-openai": {
      "comment": "本地开发 + OpenAI（需要先运行 npm run build 编译）",
      "command": "node",
      "args": ["/absolute/path/to/literature-review-mcp/build/index.js"],
      "env": {
        "LLM_PROVIDER": "openai",
        "LLM_API_KEY": "your_openai_api_key_here",
        "LLM_MODEL": "gpt-4o"
      }
    }
  }
}

